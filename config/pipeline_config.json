{
  "pipeline": {
    "orchestrator": "prefect",
    "enable_caching": true,
    "enable_incremental_processing": true,
    "max_parallel_jobs": 4
  },
  "data_quality": {
    "enable_great_expectations": true,
    "enable_drift_detection": true,
    "quality_check_frequency": "per_stage",
    "baseline_update_frequency": "quarterly"
  },
  "baseline": {
    "business_metrics": {
      "spoilage_rate_pct": 8.2,
      "stockout_rate_pct": 7.5,
      "profit_margin_pct": 4.3
    },
    "margin_breakdown": {
      "revenue": 100.0,
      "cogs": 70.0,
      "operating_costs": 10.0,
      "spoilage_loss": 8.2,
      "stockout_loss": 7.5,
      "net_profit": 4.3
    },
    "last_updated": "2024-Q4",
    "source": "Corrected baseline calculations - Vietnam Retail Association 2024 Report & Statista 2024",
    "auto_update": true,
    "industry_validation": true
  },
  "alerting": {
    "enable_email_alerts": false,
    "enable_slack_alerts": false,
    "alert_on_quality_below": 75,
    "alert_on_drift_detected": true,
    "alert_on_pipeline_failure": true
  },
  "performance": {
    "enable_monitoring": true,
    "memory_threshold_mb": 8000,
    "time_budget_hours": 4,
    "enable_profiling": false
  },
  "caching": {
    "cache_dir": "cache",
    "max_cache_size_gb": 20,
    "default_expiry_hours": 48,
    "compress_cache": true
  }
}
